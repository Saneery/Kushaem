
<!DOCTYPE html>
<html>
<head>
  <title>Кушаем.ру</title>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <% javascript_include_tag "vendor/custom.modernizr" %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  
  <link href='https://fonts.googleapis.com/css?family=Roboto&subset=latin,cyrillic' rel='stylesheet' type='text/css'>
  <script type="text/javascript">
  $(window).bind("load", function () {
    var footer = $("#footer");
    var pos = footer.position();
    var height = $(window).height();
    height = height - pos.top;
    height = height - footer.height();
    if (height > 0) {
        footer.css({
            'margin-top': height + 'px'
        });
    }
});</script>
  
</head>
<body>

  <div class="row" style="padding-bottom: 15px">
    <div class="large-12 columns">

    <nav class="top-bar">
      <ul class="title-area">
        <li class="name">
          <h1><a href="/"><b>К<w id="word">У</w>ШАЕМ</b>.ru</a></h1>
          
        </li>
      </ul>
    <section class="top-bar-section">

      <ul class="left">
        <li>
          <%= link_to 'Общепиты', publicks_path %>
        </li>

                
        <li class="has-form" style="width: 32em">
        <%= form_tag search_path, method: :get do %>
          <div class="row collapse">
            <div class="large-4 columns">
              <select name="type">
                <option value="food">По блюду</option>
                <option value="publick">По заведениям</option>
              </select>
            </div>
            <div class="large-6 columns">
              <%= text_field_tag :search, params[:search] %>
            </div>
            <div class="large-2 columns">
              <%= submit_tag "Поиск", name: nil, class: "alert button expand" %>
            </div>
            
          </div>
          <% end %>
        </li>
      </ul>
        
      <ul class="right">
        <% if current_user %>
         
          <li><%= link_to "Выйти", logout_path, method: "delete" %></li>
          <% else %>
          
            <li><%= link_to "Регистрация", signup_path %></li>
        <% end %>
      </ul>
      
    </section>
    </nav>
  </div>
  </div>
        
      
       
      <div class="row">
      
         
        <div class="large-3 columns ">
          <div class="panel">
          <% if current_user %>
            <%= image_tag current_user.image, height: 200 %>
            <h5><%= current_user.first_name + " " + current_user.last_name%></h5>
              <div class="section-container vertical-nav" data-section data-options="deep_linking: false; one_up: true">
              <section class="section">
                <h5 class="title"><%= link_to 'Личный кабинет', current_user %></h5>
              </section>
              <section class="section">
                
              <h5 class="title"><%= link_to 'Редактировать', edit_path %></h5>
              </section>
              <section class="section">
                <h5 class="title"><a href="/my_rate?section=likes_food">Мои оценки</a></h5>
              </section>
              

            </div>
            <% else %>
              <%= render "sessions/form" %>
            <% end %>
          </div>
        </div>

        <div class="large-6 columns">
        
         
         
        <%= yield %>
        </div>
     
         
         
        <aside class="large-3 columns hide-for-small">
          <p><img src="http://placehold.it/300x440&text=[ad]"/></p>
          <p><img src="http://placehold.it/300x440&text=[ad]"/></p>
        </aside>
     
      </div>
     
     
       
     <div id="footer">
      <footer class="row">
        <div class="large-12 columns">
          <hr/>
          <div class="row">
            <div class="large-5 columns">
              <p>© Copyright Kushaem.ru</p>
            </div>
            <div class="large-7 columns">
              <ul class="inline-list right">
                <li><%= link_to 'О нас', about_path %></li>
                <li><%= link_to 'Владельцам', info_path %></li>
                
                
              </ul>
            </div>
          </div>
        </div>
      </footer>
    </div>
    
<script>
  $(document).foundation();


</script>
</body>
</html>
